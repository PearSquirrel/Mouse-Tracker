{
"manifest_version": 2,

  "name": "Mouse Tracker",
  "description": "Tracking your mouse's movement",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
      {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["jquery-1.11.2.js", "page_script.js"]
      },
      {
          "matches": ["http://channingpear.com/*"],
          "css": ["channing.css"],
          "js": ["jquery-1.11.2.js", "channing.js"]
      }
  ],
  "background": {
      "scripts": ["background.js"]      
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
