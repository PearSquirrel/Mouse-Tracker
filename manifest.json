{
"manifest_version": 2,

  "name": "Mouse Tracker",
  "description": "Tracking your mouse's movement",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
      {
          "matches": ["http://*/*"],
          "js": ["jquery-1.11.2.js", "page_script.js"]
      }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
