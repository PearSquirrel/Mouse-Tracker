{
    "manifest_version": 2,

    "name": "Mouse Tracker",
    "description": "Tracking your mouse's movement",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/jquery-1.11.2.js", "scripts/page_script.js"]
        }
    ],
    "background": {
        "scripts": ["scripts/background.js"]      
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "notifications"   
    ],
    "web_accessible_resources": [
        "/images/icon.png"
    ]
}
